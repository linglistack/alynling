# Server Configuration
PORT=8080
NODE_ENV=development

# Database - MongoDB Atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority
# Example: MONGODB_URI=mongodb+srv://myuser:mypassword@cluster0.xxxxx.mongodb.net/alyn-experiments?retryWrites=true&w=majority
MONGODB_URI=your-mongodb-atlas-connection-string

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
SESSION_SECRET=your_session_secret_here_change_this_in_production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend URL
CLIENT_URL=http://localhost:3000

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@alyn.com
